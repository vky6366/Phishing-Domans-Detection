{
    "manifest_version": 2,
    "name": "Phishing Detection",
    "version": "1.0",
    "description": "Detect phishing websites.",
    "permissions": [
      "activeTab",
      "storage",
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "128": "icon.png"
    }
  }
  